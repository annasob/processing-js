  popMatrix();

  // ARMS
  pushMatrix();
    translate(40, 55);
    rotate(frameCount/20.0 + sin(frameCount/10.0));
    rect(-5, -5, 10, 40);
  popMatrix();

  pushMatrix();
    translate(100, 55);
    rotate(frameCount/20.0 + cos(frameCount/15.0));
    rect(-5, -5, 10, 40);
  popMatrix();
 popMatrix();
}


